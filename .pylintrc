[MASTER]
ignore=venv,migrations
disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    useless-option-value

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-member,
    no-self-use,
    too-many-ancestors,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-public-methods,
    duplicate-code,
    protected-access

[FORMAT]
max-line-length=120
indent-string='    '

[DESIGN]
max-parents=7
max-attributes=10

[TYPECHECK]
ignored-modules=django
ignored-classes=django.db.models.Model
